<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header style="display: inline-block; border:4px double black">
        <a name="top"></a>
        <img src="~/fonts/im.jpg" alt="QQQQQ" style="float:left" height="80px" />
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Войти", "Login", "Account")</li>
                        <li>@Html.ActionLink("Регистрация", "Register", "Account")</li>
                }
                else
                {
                    <li>
                        <a>Привет @User.Identity.Name</a>
                    </li>
                        <li>@Html.ActionLink("Выход", "Logout", "Account")</li>
                }

            </ul>

        </div>
    </header>

    <div class="right-sidebar">
        <li>@Html.ActionLink("Главная", "Index", "Home")</li>
        <li>@Html.ActionLink("Гостевая", "Guest", "GuestBook")</li>
        <li>@Html.ActionLink("Анкета", "Anket", "Anket")</li>

        @RenderSection("Voting", false)
    </div>

        <div class="main-body">
            <div class="container body-content">
                @RenderBody()
                <hr />
            </div>
            <footer>
                <p>&copy; @DateTime.Now.Year</p>
                <p><a href="#top">Наверх</a></p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
